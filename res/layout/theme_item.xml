<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="8dp"
    android:layout_gravity="center"
    card:cardPreventCornerOverlap="true"
    card:cardUseCompatPadding="false"
    card:cardBackgroundColor="#33ffffff"
    card:cardElevation="0dp">
    <!--cardMaxElevation：最大卡片阴影的宽度-->
    <!--cardElevation:卡片阴影的宽度-->
    <!--cardBackgroundColor:卡片的背景颜色-->
    <!--cardCornerRadius ：卡片的圆角半径-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.android.launcher3.theme.view.PrizeImageView
            android:id="@+id/item_image"
            style="@style/imageView_item"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:background="@drawable/common_use_btn"
            android:gravity="center"
            android:text="@android:string/yes"
            android:textColor="@color/select_theme_btn"
            android:textSize="12sp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>